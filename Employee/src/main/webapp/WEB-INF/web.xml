<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

  <display-name>Archetype Created Web Application</display-name>
  
   <servlet>
  	<servlet-name>firstoperation</servlet-name>
  	<servlet-class>com.abc.Employee.controller.addemployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>firstoperation</servlet-name>
  	<url-pattern>/reqAdd</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>secondoperation</servlet-name>
  	<servlet-class>com.abc.Employee.controller.deleteemployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>secondoperation</servlet-name>
  	<url-pattern>/reqDelete</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>thirdoperation</servlet-name>
  	<servlet-class>com.abc.Employee.controller.searchemployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>thirdoperation</servlet-name>
  	<url-pattern>/reqSearch</url-pattern>
  </servlet-mapping>
  
  
  <servlet>
  	<servlet-name>fourthoperation</servlet-name>
  	<servlet-class>com.abc.Employee.controller.viewemployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>fourthoperation</servlet-name>
  	<url-pattern>/viewall</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>fifthoperation</servlet-name>
  	<servlet-class>com.abc.Employee.controller.updateemployee</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>fifthoperation</servlet-name>
  	<url-pattern>/update</url-pattern>
  </servlet-mapping>
  
  
</web-app>
